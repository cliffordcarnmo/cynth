   134                          keyup:
   135  08bf a910               	lda #16
   136  08c1 8d04d4             	sta $d404
   137                          
   138  08c4 60                 	rts
   139                          
   140                          keydown:
   141  08c5 20cf08             	jsr getnote
   142  08c8 20e108             	jsr playnote
   143  08cb 200009             	jsr updateui
   144  08ce 60                 	rts
   145                          
   146                          getnote:
   147  08cf a000               	ldy #$00
   148  08d1 b140               	lda (keycode), y
   149  08d3 6548               	adc octave
   150  08d5 aa                 	tax
