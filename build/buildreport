   152  08d6 bd0010             	lda frequencies,x
   153  08d9 8544               	sta notelow
   154                          
   155  08db bd0110             	lda frequencies+1,x
   156  08de 8546               	sta notehigh
   157                          
   158  08e0 60                 	rts
   159                          
   160                          playnote:
   161  08e1 a90f               	lda #$0f
   162  08e3 8d18d4             	sta $d418 ;volume
   163                          
   164  08e6 a911               	lda #17
